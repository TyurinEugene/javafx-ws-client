<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="445.0"
          prefWidth="657.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ru.testing.client.gui.MainController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <ToolBar maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0"
             prefWidth="570.0">
        <padding>
            <Insets left="10.0"/>
        </padding>
        <Label maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="50.0" text="WS URL"/>
        <TextField fx:id="serverUrl" maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity"
                   minWidth="-Infinity" prefHeight="25.0" prefWidth="440.0" promptText="ws://host.name/path">
            <padding>
                <Insets left="5.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </TextField>
        <Button fx:id="connectBtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Connect">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Separator orientation="VERTICAL" prefHeight="200.0">
            <padding>
                <Insets left="3.0" right="2.0"/>
            </padding>
        </Separator>
        <Circle fx:id="status" fill="#D9534F" radius="10.0" stroke="#fa20201f" strokeType="INSIDE"/>
    </ToolBar>
    <ToolBar maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0"
             prefWidth="570.0" GridPane.rowIndex="1">
        <padding>
            <Insets left="10.0"/>
        </padding>
        <Label maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="50.0" text="Message"/>
        <TextField fx:id="messageText" disable="true" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
                   prefHeight="25.0" prefWidth="440.0" promptText="some text">
            <padding>
                <Insets left="5.0"/>
            </padding>
        </TextField>
        <Button fx:id="messageSendBtn" alignment="CENTER" disable="true" maxHeight="-Infinity" maxWidth="-Infinity"
                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="100.0" text="Send">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </ToolBar>
    <GridPane GridPane.rowIndex="2" styleClass="output_grid">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="45.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <GridPane.margin>
            <Insets bottom="9.0" left="7.0" right="7.0" top="7.0"/>
        </GridPane.margin>
        <TextArea fx:id="outputText" prefHeight="100.0" prefWidth="200.0"/>
        <ToolBar prefHeight="35.0" prefWidth="200.0" GridPane.rowIndex="1">
            <Button fx:id="cleanOutputTextBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="100.0" text="Clean output" textAlignment="CENTER"/>
            <Separator minHeight="-Infinity" minWidth="-Infinity" orientation="VERTICAL" prefHeight="35.0">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </Separator>
            <Label text="Filter" minWidth="35"/>
            <FlowPane alignment="CENTER_LEFT" hgap="10.0" maxHeight="-Infinity" maxWidth="Infinity"
                      minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="295.0"
                      styleClass="filter_block">
                <padding>
                    <Insets bottom="3.0" left="10.0" right="3.0" top="3.0"/>
                </padding>
                <TextField fx:id="filterText" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                           minWidth="-Infinity" prefHeight="25.0" prefWidth="150.0"/>
                <Button fx:id="addFilterBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="50.0" text="Add"/>
                <MenuButton fx:id="filterList" disable="true" minHeight="-Infinity" minWidth="-Infinity"
                            mnemonicParsing="false" prefHeight="25.0" prefWidth="50.0" text="List"/>
            </FlowPane>
        </ToolBar>
    </GridPane>
</GridPane>
